  <%= f.label(:sex, "Male") %><br>
  <%= f.radio_button :sex, "Female" %> 
  <%= f.label(:sex, "Female") %><br>
  <%= f.radio_button :sex, "Herm" %> 
  <%= f.label(:sex, "Herm") %><br>
  <%= f.radio_button :sex, "Other" %> 
  <%= f.label(:sex, "Other") %><br>
  <%= f.label(:time_until_harvest, "Est. Time Til harvest (days)") %><br>
  <%= f.number_field :time_until_harvest %> <br>
  <%= f.submit %> <small>
  <%=link_to "Cancel", user_garden_path(current_user, @garden) %></small>
<% end %>

